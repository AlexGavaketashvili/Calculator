<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="213dp"
        android:layout_weight="1"
        android:background="#201F1F"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text=""
            android:textColor="@color/white"
            android:textSize="35sp">

        </TextView>

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text=""
            android:textColor="#4CAF50"
            android:textSize="55sp"
            >

        </TextView>


    </LinearLayout>

    <TableLayout
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:text="c"
                android:id="@+id/buttonclear"
                android:textColor="@color/black"
                android:backgroundTint="#A31309"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:textSize="35sp"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="("
                android:id="@+id/buttonleftbracket"
                android:textSize="35sp"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text=")"
                android:id="@+id/buttonrightbracket"
                android:textSize="35sp"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="รท"
                android:id="@+id/buttongayopa"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:backgroundTint="#4CAF50"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>


        </TableRow>

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:text="7"
                android:id="@+id/button7"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:textSize="35sp"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="8"
                android:id="@+id/button8"
                android:textSize="35sp"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="9"
                android:id="@+id/button9"
                android:textSize="35sp"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="x"
                android:id="@+id/buttongamravleba"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:backgroundTint="#4CAF50"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>


        </TableRow>

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:text="4"
                android:id="@+id/button4"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:textSize="35sp"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="5"
                android:id="@+id/button5"
                android:textSize="35sp"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="6"
                android:id="@+id/button6"
                android:textSize="35sp"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="-"
                android:id="@+id/buttongamokleba"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:backgroundTint="#4CAF50"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>


        </TableRow>

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button1"
                android:text="1"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:textSize="35sp"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="2"
                android:id="@+id/button2"
                android:textSize="35sp"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="3"
                android:id="@+id/button3"
                android:textSize="35sp"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="+"
                android:id="@+id/buttonmimateba"
                android:textColor="@color/black"
                android:backgroundTint="#4CAF50"
                android:textSize="35sp"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>


        </TableRow>

        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button0"
                android:text="0"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:textSize="35sp"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="."
                android:id="@+id/buttonwertili"
                android:textSize="35sp"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:text="del"
                android:id="@+id/buttonwashla"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#A31309"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>



            <androidx.appcompat.widget.AppCompatButton
                android:text="="
                android:id="@+id/buttonequals"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:layout_margin="8dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#4CAF50"
                android:layout_width="80dp"
                android:layout_height="80dp">

            </androidx.appcompat.widget.AppCompatButton>


        </TableRow>








    </TableLayout>







</LinearLayout>



